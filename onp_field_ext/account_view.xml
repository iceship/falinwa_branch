<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_onp_ext_invoice_tree" model="ir.ui.view">
            <field name="name">onp.ext.account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="date_due" position="after">
                        <field name="fal_risk_level" />
                    </field>
                    <field name="period_id" position="attributes">
                        <attribute name="invisible">0</attribute>
                    </field>
                    <field name="company_id" position="attributes">
                        <attribute name="groups"></attribute>
                    </field>
                    <field name="currency_id" position="attributes">
                        <attribute name="groups"></attribute>
                    </field>
                </data>
            </field>
        </record>
        
        <record id="view_onp_ext_invoice_form" model="ir.ui.view">
            <field name="name">onp.ext.account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="date_invoice" position="before">
                        <group colspan="4">
                            <label for="fal_risk_level"/>
                            <div name="risk_level">
                                <field name="fal_risk_level" class="oe_inline" /> - <field name="fal_risk_level_name" class="oe_inline" />
                            </div>
                        </group>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_account_analytic_account_form_onpext" model="ir.ui.view">
            <field name="name">analytic.analytic.account.form.fal.onpext</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="description" position="replace">
                    </field>
                    <group name="main" position="inside">
                        <field name="description" nolabel="1" placeholder="Put description in here.."/>
                    </group>
                </data>
            </field>
        </record>
        
        <record id="edit_project_fal_onpext" model="ir.ui.view">
            <field name="name">project.project.form.fal.onpext</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <data>
                    <field name="partner_id" position="after">
                        <field name="description" nolabel="1" placeholder="Put description in here.." colspan="4"/>
                    </field>
                </data>
            </field>
        </record>
        
    </data>
</openerp>