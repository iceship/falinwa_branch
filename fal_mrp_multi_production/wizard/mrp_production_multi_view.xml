<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_multi_production_wizard" model="ir.ui.view">
            <field name="name">mrp.production.multi.wizard</field>
            <field name="model">mrp.production.multi.wizard</field>
            <field name="arch" type="xml">
                <form string="Multi Production Wizard" version="7.0">                
                    <label string="This process will force production all selected production orders!" colspan="2"/>
                    <footer>
                        <button name="force_production" string="Force Production" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>