<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="mrp_bom_form_view_fal_bomi" model="ir.ui.view">
            <field name="name">mrp.bom.form.fal.bomi</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <field name="product_efficiency" position="after">
                    </field>
                    <page string="Properties" groups="product.group_mrp_properties" position="inside">
                        <field name="fal_mold_information_ids">
                            <tree editable="top">
                                <field name="fal_mold_number" />
                                <field name="fal_tonnage" />
                                <field name="fal_cycles_time" />
                                <field name="fal_cavity" />
                            </tree>
                        </field>
                    </page>
                </data>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mrp_production_view_fal_bomi">
          <field name="name">mrp.production.form.fal.bomi</field>
          <field name="model">mrp.production</field>
          <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
          <field name="arch" type="xml">
            <data>
                <field name="origin" position="after">
                    <field name="project_number" />
                </field>
            </data>
          </field>
        </record>
                        
    </data>
</openerp>
