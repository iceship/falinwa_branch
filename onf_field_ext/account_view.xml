<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="invoice_tree_onf_ext" model="ir.ui.view">
            <field name="name">account.invoice.tree.onf.ext</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="period_id" position="attributes">
                        <attribute name="invisible">0</attribute>
                        <attribute name="groups"></attribute>
                    </field>
                    <field name="date_due" position="after">
                        <field name="fal_risk_level" />
                    </field>
                </data>
            </field>
        </record>
        
        <record id="view_onf_ext_invoice_form_1" model="ir.ui.view">
            <field name="name">onf.ext.account.invoice.form1</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="groups_id" eval="[(6,0,[ref('group_onf_user')])]" />
            <field name="arch" type="xml">
                <data>
                    <field name="date_invoice" position="before">
                        <group colspan="4">
                            <label for="fal_risk_level"/>
                            <div name="risk_level">
                                <field name="fal_risk_level" class="oe_inline" /> - <field name="fal_risk_level_name" class="oe_inline" />
                            </div>
                        </group>
                    </field>
                    <xpath expr="//page[@string='Invoice Lines']/field[@name='invoice_line']/tree[@string='Invoice Lines']/field[@name='account_analytic_id']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_onf_ext_invoice_supplier_form_1" model="ir.ui.view">
            <field name="name">onf.account.invoice.supplier.form1</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="groups_id" eval="[(6,0,[ref('group_onf_user')])]" />
            <field name="arch" type="xml">
                <data>
                    <field name="date_invoice" position="before">
                        <group colspan="4">
                            <label for="fal_risk_level"/>
                            <div name="risk_level">
                                <field name="fal_risk_level" class="oe_inline" /> - <field name="fal_risk_level_name" class="oe_inline" />
                            </div>
                        </group>
                    </field>
                    <xpath expr="//page[@string='Invoice']/field[@name='invoice_line']/tree[@string='Invoice lines']/field[@name='account_analytic_id']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_account_analytic_account_form_onfext" model="ir.ui.view">
            <field name="name">analytic.analytic.account.form.fal.onfext</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="description" position="replace">
                    </field>
                    <group name="main" position="inside">
                        <field name="description" nolabel="1" placeholder="Put description in here.."/>
                    </group>
                </data>
            </field>
        </record>
        
        <record id="edit_project_fal_onfext" model="ir.ui.view">
            <field name="name">project.project.form.fal.onfext</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <data>
                    <field name="partner_id" position="after">
                        <field name="description" nolabel="1" placeholder="Put description in here.." colspan="4"/>
                    </field>
                </data>
            </field>
        </record>
        
    </data>
</openerp>