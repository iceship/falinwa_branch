<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="purchase_order_form_fwa_onf">
            <field name="name">purchase.order.form.fwa.onf</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="groups_id" eval="[(6,0,[ref('group_onf_user')])]" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@string='Purchase Order']/field[@name='order_line']/tree[@string='Purchase Order Lines']/field[@name='product_id']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                    <xpath expr="//page[@string='Purchase Order']/field[@name='order_line']/tree[@string='Purchase Order Lines']/field[@name='account_analytic_id']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                </data>
            </field>
        </record>
        
        <record model="ir.ui.view" id="purchase_order_form_fwa_onf1">
            <field name="name">purchase.order.form.fwa.onf1</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="invoice_method" position="after">
                        <field name="fal_invoice_term" />
                    </field>
                </data>
            </field>
        </record>
    </data>
</openerp>