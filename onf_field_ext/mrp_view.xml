<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="mrp_production_tree_view_fal_onf_ext" model="ir.ui.view">
            <field name="name">mrp.production.tree.fal.onfext</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <tree string="Manufacturing Orders" position="attributes">
                    <attribute name="colors">blue:state in ('draft','confirmed');green:state=='ready';red:date_planned&lt;current_date and state not in ('done','cancel');black:date_planned&gt;=current_date;gray:state in ('done','cancel')</attribute>
                </tree>
            </field>
        </record>
        
        <record id="fal_onf_ext_mrp_production_form_view" model="ir.ui.view">
            <field name="name">fal.onf.ext.mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@string='Produced Products']/field[@name='move_created_ids2']/tree[@string='Finished Products']/field[@name='location_dest_id']" position="after">
                        <field name="date" readonly="1"/>
                    </xpath>
                </data>
            </field>
        </record>
        
    </data>
</openerp>