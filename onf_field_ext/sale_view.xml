<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_order_tree_onf_ext" model="ir.ui.view">
            <field name="name">sale.order.tree.onf.ext</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="partner_id" position="after">
                        <field name="project_id" />
                        <field name="invoiced_rate" widget="progressbar" />
                    </field>
                </data>
            </field>
        </record>

        <record id="view_sales_order_filter_onf_ext" model="ir.ui.view">
            <field name="name">sale.order.list.select.onf.ext</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <data>
                    <filter string="Done" position="after">
                        <filter string="Project" domain="[]" context="{'group_by':'project_id'}" />
                    </filter>
                </data>
            </field>
        </record>
        
        <record id="view_order_form_onf_ext" model="ir.ui.view">
            <field name="name">sale.order.form.onf.ext</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="groups_id" eval="[(6,0,[ref('group_onf_user')])]" />
            <field name="arch" type="xml">
                <data>
                    <field name="project_id" context="{'partner_id':partner_invoice_id, 'default_pricelist_id':pricelist_id, 'default_name':name, 'default_type': 'contract'}" groups="sale.group_analytic_accounting" domain="[('type','in',['view','normal','contract'])]" position="attributes">
                        <attribute name="required">1</attribute>
                    </field>
                    <xpath expr="//page[@string='Order Lines']/field[@name='order_line']/form[@string='Sales Order Lines']/group/group/field[@name='product_id']" position="replace">
                                            <field name="product_id"
                                                context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom}"
                                                groups="base.group_user"
                                                on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, True, parent.date_order, False, parent.fiscal_position, False, context)" required="1"/>
                    </xpath>
                    <xpath expr="//page[@string='Order Lines']/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='product_id']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                </data>
            </field>
        </record>
        
        <record id="view_order_line_form2_onf_ext" model="ir.ui.view">
            <field name="name">sale.order.line.form2.onf.ext</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_form2"/>
            <field name="groups_id" eval="[(6,0,[ref('group_onf_user')])]" />
            <field name="arch" type="xml">
                <data>
                    <field name="product_id" position="attributes">
                        <attribute name="required">1</attribute>
                    </field>
                </data>
            </field>
        </record>

        <record id="edit_project_ori_inherit_onf_ext" model="ir.ui.view">
            <field name="name">project.project.form.inherit.onf.ext</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='name']" position="after">
                        <field name="code" />
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_project_onf_ext" model="ir.ui.view">
            <field name="name">project.project.tree.onf.ext</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="code" />
                </field>
            </field>
        </record>
        
    </data>
</openerp>