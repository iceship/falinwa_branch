<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="view_picking_tree_onfext" model="ir.ui.view">
            <field name="name">stock.picking.tree.onfext</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="name" position="after">
                        <field name="product_names_list" />
                    </field>
                </data>
            </field>
        </record>
        
        <record id="view_move_picking_tree_onfext" model="ir.ui.view">
            <field name="name">stock.move.tree.onfext</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="product_uom_qty" position="attributes">
                        <attribute name="sum">Total</attribute>
                    </field>
                    <field name="location_id" position="replace">
                    </field>
                    <field name="location_dest_id" position="before">
                        <field name="location_id" />
                    </field>
                </data>
            </field>
        </record>

        <record id="view_picking_form_onfext" model="ir.ui.view">
            <field name="name">stock.picking.form.onfext</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/sheet" position="after">
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </xpath>
                </data>
            </field>
        </record>
        
    </data>
</openerp>