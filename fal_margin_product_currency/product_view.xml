            <field name="inherit_id" ref="fal_margin_product.product_normal_form_view_fal_marpro"/>
            <field name="arch" type="xml">
                <data>
                    <field name="fal_net_margin" position="after">
                        <field name="net_currency_id" nolabel="1" />
                    </field>
                </data>
            </field>
        </record>
        
    </data>
</openerp>